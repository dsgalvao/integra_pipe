  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%= organization.pipedrive_id %></td>
    <td><%= organization.my_finance_id %></td>
    <td><%= organization.name %></td>
    <td><%= organization.segmento %></td>
    <td><%= organization.razao_social %></td>
    <td><%= organization.fisica_juridica %></td>
    <td><%= organization.cpf_cnpj %></td>
    <td><%= organization.url %></td>
    <td><%= organization.email %></td>
    <td><%= organization.update_time %></td>
    <td><%= link_to 'Show', organization %></td>
    <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
    <td><%= link_to 'Destroy', organization, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

